            <Path fileType="library">/usr/lib/ADM_plugins6/videoFilters/libADM_vf_swscaleResize_qt4.so</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile target="/usr/share/applications/avidemux3-qt.desktop">avidemux3-qt.desktop</AdditionalFile>
        </AdditionalFiles>
    </Package>

