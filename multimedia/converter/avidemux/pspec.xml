            <Path fileType="executable">/usr/bin/avidemux3_gtk</Path>
            <Path fileType="library">/usr/lib/libADM_render6_gtk.so</Path>
            <Path fileType="library">/usr/lib/ADM_plugins6/videoFilters/libADM_vf_swscaleResize_gtk.so</Path>
