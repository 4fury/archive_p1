    <Package>
        <Name>coolreader</Name>
        <RuntimeDependencies>
            <Dependency>fontconfig</Dependency>
            <Dependency>freetype</Dependency>
            <Dependency>libjpeg-turbo</Dependency>
            <Dependency>qt</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable" permanent="0">/usr/bin/cr3</Path>
            <Path fileType="data" permanent="0">/usr/share/applications/cr3.desktop</Path>
            <Path fileType="data" permanent="0">/usr/share/coolreader/*</Path>
            <Path fileType="doc" permanent="0">/usr/share/doc/coolreader/*</Path>
            <Path fileType="man" permanent="0">/usr/share/man/*</Path>
            <Path fileType="data" permanent="0">/usr/share/pixmaps/*</Path>
        </Files>
