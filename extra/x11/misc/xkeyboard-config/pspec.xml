            <Path fileType="data">/usr/share/pkgconfig</Path>
            <Path fileType="man">/usr/share/man</Path>
        </Files>
        <AdditionalFiles>
            <AdditionalFile owner="root" permission="0644" target="/etc/X11/xorg.conf.d/10-keyboard.conf">10-keyboard.conf</AdditionalFile>
