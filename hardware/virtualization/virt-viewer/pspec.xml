            <Dependency>libvirt-devel</Dependency>
            <Dependency>gtk-vnc-devel</Dependency>
            <Dependency>libglade-devel</Dependency>
            <Dependency>cyrus-sasl-devel</Dependency>
            <Dependency>gdk-pixbuf-devel</Dependency>
        </BuildDependencies>
