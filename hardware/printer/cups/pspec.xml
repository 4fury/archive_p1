            <Dependency>dbus-32bit</Dependency>
            <Dependency>libusb-compat-32bit</Dependency>
            <Dependency>libusbx-32bit</Dependency>
            <Dependency>libgcrypt-32bit</Dependency>
        </BuildDependencies>
        <RuntimeDependencies>
