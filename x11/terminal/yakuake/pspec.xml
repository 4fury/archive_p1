            <Dependency>libXrender</Dependency>
            <Dependency>automoc4</Dependency>
            <Dependency>qt-devel</Dependency>
        </BuildDependencies>
        <Patches>
            <!--<Patch level="1">plasma-oxygen-panel.patch</Patch>-->
