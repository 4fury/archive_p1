        <License>GPL</License>
        <PartOf>network.download</PartOf>
        <IsA>app:gui</IsA>
        <Summary>A friendly nzb usenet binary downloader for KDE4.</Summary>
        <Description>Kwooty supports file repairing (with use of par2 binary) and archive extraction (with use of unrar binary) when nzb download content has been achieved.</Description>
        <BuildDependencies>
            <Dependency>automoc4</Dependency>
            <Dependency>cmake</Dependency>
            <Dependency>kde-workspace-devel</Dependency>
            <Dependency>kdelibs-devel</Dependency>
        </BuildDependencies>
        <Archive sha1sum="b65a6538606985f61313554c536047e9a8db261e" type="targz">mirrors://sourceforge/kwooty/kwooty-1.1.0.tar.gz</Archive>
    </Source>
    <Package>
        <Name>kwooty</Name>
        <RuntimeDependencies>
            <Dependency>qt</Dependency>
            <Dependency>kdelibs</Dependency>
            <Dependency>kde-workspace</Dependency>
            <Dependency>p7zip</Dependency>
            <Dependency>par2cmdline</Dependency>
            <Dependency>unrar</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="executable">/usr/bin/*</Path>
            <Path fileType="library">/usr/lib/*</Path>
            <Path fileType="data">/usr/share/applications/kde4/*</Path>
            <Path fileType="config">/usr/share/config.kcfg/*</Path>
            <Path fileType="data">/usr/share/icons/hicolor/*</Path>
            <Path fileType="data">/usr/share/kde4/*</Path>
            <Path fileType="localedata">/usr/share/locale/*</Path>
        </Files>
    </Package>
    
