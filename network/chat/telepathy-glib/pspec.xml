            <Dependency release="current">telepathy-glib</Dependency>
        </RuntimeDependencies>
        <Files>
            <Path fileType="doc">/usr/share/gtk-doc</Path>
        </Files>
    </Package>

    <Package>
        <Name>telepathy-glib-devel</Name>
        <Summary>Development files for telepathy-glib</Summary>
